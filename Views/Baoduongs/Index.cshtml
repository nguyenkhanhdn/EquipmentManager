@model IEnumerable<EquipmentManager.Models.Baoduong>

@{
    ViewBag.Title = "Bảo dưỡng thiết bị";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Danh mục bảo dưỡng</h2>

<p>
    @Html.ActionLink("Thêm mục bảo dưỡng", "Create")
</p>
<table class="table table-responsive table-hover" id="bdtb">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ThietbiId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lanbaoduong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Noidung)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ngaybaoduong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nhanvien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ghichu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ThietbiId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lanbaoduong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Noidung)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ngaybaoduong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nhanvien)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ghichu)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#bdtb').DataTable();
        });
    </script>
}